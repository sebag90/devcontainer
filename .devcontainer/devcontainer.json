{
    "appPort": [
        "2022:22"
    ],
    "build": {
        "args": {},
        "context": ".",
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python"
            }
        }
    },
    "name": "Python 3",
    "postCreateCommand": "bash .devcontainer/scripts/post_create.sh",
    "remoteUser": "devuser",
    "runArgs": [
        "--rm",
        "--env-file",
        ".env"
    ]
}
